<div class="window">
    <p>Welcome!</p>
    <div>
        <span>
            <p>Please, enter your nickname here</p>
            <img src="{{nick}}" alt=""><input type="text" id="nick" placeholder="example: ChunChunMaru">
        </span>
        <span>
            <p>And enter your living place</p>
            <img src="{{marker}}" alt=""><input type="text" id="place" placeholder="example: Tokyo, Yapan">
        </span>
    </div>
    <button id="send"><img src="{{button}}" alt=""> Enter</button>
    <script src="/script/welcome.js"></script>
</div>